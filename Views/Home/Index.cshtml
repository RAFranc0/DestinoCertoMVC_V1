@{
    ViewData["Title"] = "Início";
}
<div class="container text-center d-flex justify-content-center align-items-center">
    <div class="border border-danger" id="index-btn-home">
        Home
    </div>
    <div class="d-flex justify-content-center align-items-center" id="menu-index">
        <div class="d-flex justify-content-around align-items-center" id="menu-index-btn-box">
            <div id="menu-index-btn-login">
                <button type="button" class="btn btn-light" id="btn-login" data-bs-toggle="modal"
                    data-bs-target="#modal-login">Login</button>
            </div>
            <div id="menu-index-btn-vitrine">
                <button type="button" class="btn btn-light" id="btn-vitrine" onclick="window.location.href='@Url.Action("Vitrine", "Home")'">Vitrine</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-login" tabindex="-1" aria-labelledby="modal-loginLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" id="modal-dialog">
            <div class="modal-content d-flex justify-content-center align-items-center" id="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modal-loginLabel">Destino Certo - Login</h1>
                    <button type="button" class="btn-close ms-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body">
                    <form asp-controller="Home" asp-action="MenuUsuario" method="post">
                        <div>
                            <label class="form-label" for="login-input">Login</label>
                            <input class="form-control" type="text" id="login-input">
                        </div>
                        <div>
                            <label class="form-label" for="senha-input">Senha</label>
                            <input class="form-control" type="password" id="senha-input">
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
                        <button type="submit" class="btn btn-primary">Log-in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
